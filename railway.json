{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --omit=dev",
    "nixpacks": {
      "providers": ["node"]
    }
  },
  "deploy": {
    "startCommand": "node index.js",
    "restartPolicyType": "on-failure",
    "restartPolicyMaxRetries": 5,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10
  }
}
